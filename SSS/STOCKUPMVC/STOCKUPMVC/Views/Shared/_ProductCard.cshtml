@model STOCKUPMVC.Models.Product

<div class="col">
    <div class="card h-100 shadow-sm">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/placeholder.png" : Model.ImageUrl)"
             class="card-img-top" alt="@Model.Name" />
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5> <!-- FIXED: Changed product to Model -->
            <p class="card-text text-truncate">
                @(Model.Description?.Length > 50 ? Model.Description.Substring(0, 50) + "..." : Model.Description)
            </p>
            <div class="mt-auto">
                <span class="fw-bold text-primary h5">$@Model.Price</span>
                <div class="d-flex gap-2 mt-2">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductID"
                       class="btn btn-sm btn-outline-primary flex-fill">View</a>

                    <!-- ADD TO CART BUTTON -->
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                        <input type="hidden" name="productId" value="@Model.ProductID" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-sm btn-warning flex-fill">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>