@model STOCKUPMVC.Models.Product

<div class="col">
    <div class="card h-100 shadow-sm">
      <!--  <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "~/images/placeholder.png")"
             class="card-img-top" alt="@Model.Name" />-->
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text text-truncate">
                @(Model.Description?.Length > 50 ? Model.Description.Substring(0, 50) + "..." : Model.Description)
            </p>
            <div class="mt-auto">
                <span class="fw-bold">$@Model.Price</span>
                <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductID" class="btn btn-sm btn-outline-primary float-end">View</a>
            </div>
        </div>
    </div>
</div>
