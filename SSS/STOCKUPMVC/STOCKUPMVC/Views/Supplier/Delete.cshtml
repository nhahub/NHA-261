@model STOCKUPMVC.Models.Supplier
@{
    ViewData["Title"] = "Delete Supplier";
    Layout = "_AdminLayout";
}

<h2>Delete Supplier</h2>

<div class="alert alert-danger mt-4">
    <strong>Warning:</strong> Are you sure you want to delete this supplier?
</div>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name <br />
    <strong>Email:</strong> @Model.Email <br />
    <strong>Phone:</strong> @Model.Phone <br />
    <strong>Address:</strong> @Model.Address
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="SupplierID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
