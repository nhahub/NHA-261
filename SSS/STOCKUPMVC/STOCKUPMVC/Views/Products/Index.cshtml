@model IEnumerable<STOCKUPMVC.Models.Product>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<form method="get" asp-action="Index" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="searchString" class="form-control"
               placeholder="Search by Name or SKU"
               value="@ViewBag.SearchString" />
    </div>
    <div class="col-md-4">
        <select name="categoryId" class="form-control">
            <option value="">All Categories</option>
            @foreach (var c in ViewBag.Categories)
            {
                <option value="@c.CategoryID" selected="@(ViewBag.CategoryId == c.CategoryID)">
                    @c.Name
                </option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button class="btn btn-primary w-100">Search</button>
    </div>
</form>

@if (User.IsInRole("Admin") || User.IsInRole("Staff"))
{
    <a class="btn btn-success mb-3" asp-action="Create">+ Add Product</a>
}

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>SKU</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.SKU</td>
                <td>@item.Category?.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ProductID">Details</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                    {
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ProductID">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="?page=@i&searchString=@ViewBag.SearchString&categoryId=@ViewBag.CategoryId">@i</a>
                </li>
            }
        </ul>
    </nav>
}
