@model STOCKUPMVC.Models.ViewModels.ProductFormViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Product";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Product.ProductID" />

    <div class="form-group mb-3">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.SKU"></label>
        <input asp-for="Product.SKU" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.CategoryID">Category</label>
        <select asp-for="Product.CategoryID" class="form-control" asp-items="Model.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.Description"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
