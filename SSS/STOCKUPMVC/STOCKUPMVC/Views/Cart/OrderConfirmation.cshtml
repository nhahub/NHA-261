@model STOCKUPMVC.Models.SalesOrder
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="text-center">
        <div class="alert alert-success">
            <h2>🎉 Order Placed Successfully!</h2>
            <p class="lead">Thank you for your purchase! Your order has been confirmed.</p>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Order Details</h4>
            </div>
            <div class="card-body text-start">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Order Number:</strong> #@Model.OrderID</p>
                        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
                        <p><strong>Status:</strong> <span class="badge bg-warning">@Model.Status</span></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Customer:</strong> @Model.Customer.Name</p>
                        <p><strong>Email:</strong> @Model.Customer.Email</p>
                        <p><strong>Phone:</strong> @Model.Customer.Phone</p>
                    </div>
                </div>

                <hr>

                <h5>Order Items</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>$@item.UnitPrice</td>
                                <td>$@(item.Quantity* item.UnitPrice)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>Total:</strong></td>
                            <td><strong>$@Model.TotalAmount</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i> Continue Shopping
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-home"></i> Back to Home
            </a>
        </div>
    </div>
</div>