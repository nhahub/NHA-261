@model STOCKUPMVC.ViewModels.UserListItemViewModel
@{
    Layout = "_AdminLayout";
}

<h2>Delete Staff User</h2>

<div class="card p-4">
    <h4>@Model.FullName</h4>

    <dl class="row mt-3">
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@Model.Role</dd>

        <dt class="col-sm-3">Warehouse</dt>
        <dd class="col-sm-9">@Model.WarehouseName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>
