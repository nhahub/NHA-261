@model IEnumerable<STOCKUPMVC.ViewModels.UserListItemViewModel>

@{
    Layout = ViewBag.Layout ?? "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>User Management</h2>
    <a asp-action="CreateStaff" class="btn btn-primary">
        <i class="fa fa-user-plus"></i> Add Staff User
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Warehouse</th>
            <th style="width: 120px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.WarehouseName</td>
                <td>
                    @if (user.Role == "Staff")
                    {
                        <a asp-action="Delete"
                           asp-route-id="@user.Id"
                           class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
