@model STOCKUPMVC.Models.Warehouse
@{
    ViewData["Title"] = "Delete Warehouse";
    Layout = "_AdminLayout";
}

<h2>Delete Warehouse</h2>

<div class="alert alert-danger mt-4">
    <strong>Warning:</strong> Are you sure you want to delete this warehouse?
</div>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name <br />
    <strong>Location:</strong> @Model.Location
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="WarehouseID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
