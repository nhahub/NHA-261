@model STOCKUPMVC.ViewModels.DashboardViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Dashboard</h2>
            <p class="text-muted">Welcome to your warehouse management dashboard</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.ProductCount</h4>
                            <p>Total Products</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.WarehouseCount</h4>
                            <p>Warehouses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-warehouse fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.PendingSalesOrderCount</h4>
                            <p>Pending Sales Orders</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.PendingPurchaseOrderCount</h4>
                            <p>Pending Purchase Orders</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-truck fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders Section -->
    <div class="row">
        <!-- Recent Sales Orders -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>Recent Sales Orders
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentSalesOrders != null && Model.RecentSalesOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentSalesOrders)
                                    {
                                        <tr>
                                            <td>#@order.OrderID</td>
                                            <td>@order.Customer?.Name</td>
                                            <td>
                                                <span class="badge @(order.Status == "Pending" ? "bg-warning" :
                                                                                                                    order.Status == "Confirmed" ? "bg-info" :
                                                                                                                    order.Status == "Shipped" ? "bg-primary" :
                                                                                                                    order.Status == "Delivered" ? "bg-success" : "bg-secondary")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                </tr>
                                                                }
                                </tbody>
                            </table>
                        </div>
                        <a asp-controller="SalesOrder" asp-action="List" class="btn btn-outline-primary btn-sm">View All Sales Orders</a>
                    }
                    else
                    {
                        <p class="text-muted">No recent sales orders</p>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Purchase Orders -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-truck me-2"></i>Recent Purchase Orders
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentPurchaseOrders != null && Model.RecentPurchaseOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>PO ID</th>
                                        <th>Supplier</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentPurchaseOrders)
                                    {
                                        <tr>
                                            <td>#@order.POID</td>
                                            <td>@order.Supplier?.Name</td>
                                            <td>
                                                <span class="badge @(order.Status == "Pending" ? "bg-warning" :
                                                                                                                    order.Status == "Approved" ? "bg-info" :
                                                                                                                    order.Status == "Completed" ? "bg-success" : "bg-secondary")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                </tr>
                                                                }
                                </tbody>
                            </table>
                        </div>
                        <a asp-controller="PurchaseOrder" asp-action="List" class="btn btn-outline-success btn-sm">View All Purchase Orders</a>
                    }
                    else
                    {
                        <p class="text-muted">No recent purchase orders</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add Product
                        </a>
                        <a asp-controller="SalesOrder" asp-action="List" class="btn btn-success">
                            <i class="fas fa-shopping-cart me-2"></i>View Sales Orders
                        </a>
                        <a asp-controller="PurchaseOrder" asp-action="Create" class="btn btn-warning">
                            <i class="fas fa-truck me-2"></i>Create Purchase Order
                        </a>
                        <a asp-controller="Inventory" asp-action="List" class="btn btn-info">
                            <i class="fas fa-warehouse me-2"></i>Manage Inventory
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .badge {
            font-size: 0.75em;
        }
    </style>
}