@{
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Worker Dashboard";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p class="text-muted">Welcome, @User.Identity.Name! Here's your daily overview.</p>

    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="fs-1 text-primary mb-2">📦</div>
                    <h5>Products</h5>
                    <p class="text-muted">Manage items</p>
                    <!-- UPDATED: Changed to WorkerIndex -->
                    <a asp-controller="Products" asp-action="WorkerIndex" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="fs-1 text-success mb-2">📥</div>
                    <h5>Inventory</h5>
                    <p class="text-muted">Stock levels</p>
                    <a asp-controller="Inventory" asp-action="List" class="btn btn-outline-success btn-sm">Check Stock</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="fs-1 text-warning mb-2">🛒</div>
                    <h5>Sales Orders</h5>
                    <p class="text-muted">Customer orders</p>
                    <a asp-controller="SalesOrder" asp-action="List" class="btn btn-outline-warning btn-sm">View Orders</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="fs-1 text-info mb-2">📊</div>
                    <h5>Stock Movements</h5>
                    <p class="text-muted">Track movements</p>
                    <a asp-controller="StockMovement" asp-action="List" class="btn btn-outline-info btn-sm">View Logs</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Recent Stock Movements</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <span>Product "Laptop Dell XPS" stock updated</span>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <span>New sales order #1045 received</span>
                                <small class="text-muted">4 hours ago</small>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <span>Inventory check completed for Warehouse A</span>
                                <small class="text-muted">1 day ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Products" asp-action="Create" class="btn btn-primary">Add New Product</a>
                        <a asp-controller="Inventory" asp-action="Create" class="btn btn-outline-primary">Update Inventory</a>
                        <a asp-controller="StockMovement" asp-action="Create" class="btn btn-outline-secondary">Record Stock Movement</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>